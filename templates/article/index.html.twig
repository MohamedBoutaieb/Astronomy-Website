{% extends 'base.html.twig' %}
{% block assets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
{% endblock %}
{% block title %}Articles{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for article in articles %}
            <div class="col-nd-4">
                <div class="card nb-4 shadow-sm">
{#                  <img src="{{ article.img }}" alt="{{ article.img }}">#}
                    <div class="card-body">
                        <p class="card-text">{{ article.content}} </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">{{ article.createdAt|date("d/m/y") }}</small>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
    <div class="container">
        <div class="col-xs4"><a href='{{ path('Add_Post') }}' class="btn shadow-1 rounded-1 blue">Add Post</a></div>
    </div>

{% endblock %}

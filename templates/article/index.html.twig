{% extends 'base.html.twig' %}
{% block assets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
{% endblock %}
{% block title %}Articles{% endblock %}
{% block body %}
    <body class="" style="background: url('{{ asset('images/signup_bg.jpg') }}')">
        <div class="container">
            <div class="container" style="background-color: lightgrey; border-radius: 1%">
                {{ form(form) }}
                <br>
            </div>
            <br>
{#                <div class="col-xs4"><a href='{{ path('Add_Post') }}' class="btn shadow-1 rounded-1 blue">Add Post</a></div>#}
            {% for article in articles %}
            <div class="card text-center">
                <div class="card-header">
                    {{ article.title}}
                </div>
                <div class="card-body">
                    <p class="card-text">{{ article.content }}</p>
                </div>
                <div class="card-footer text-muted">
                    {{ article.createdAt|date("d/m/y") }}
                </div>
            </div>
            {% endfor %}
        </div>
    </body>

{% endblock %}

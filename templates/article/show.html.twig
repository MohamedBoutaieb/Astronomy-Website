{% extends 'base.html.twig' %}

{% block title %} Article {% endblock %}

{% block assets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ article.title}}</h1>
    <p>{{ article.content }}</p>
    <figure>
        <img src="" alt=""
    </figure>
    <small class="text-muted">{{ article.createdAt|date("d/m/y") }}</small>
</div>
{% endblock %}

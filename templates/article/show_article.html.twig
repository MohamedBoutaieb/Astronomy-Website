{% block body %}
        <section class="pt-8 pt-md-11">
            <div class="container mb-2">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 col-lg-9 col-xl-8">
                        <div class="card card-row shadow-light-lg">
                            <div class="row gx-0">
                                <div class="card-body">
                                    <blockquote class="mb-0 text-center">
                                        <p>{{ article.content | raw}}</p>
                                        <footer class="blockquote-footer">
                                            <span class="h6 text-uppercase">Published on {{ article.createdAt|date("d/m/y h:i")}} By {{ article.user }}</span>
                                        </footer>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {% include "comments/form.html.twig" %}
    <div class="text-center">

        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modalSubscriptionForm">Add comment</button>

    </div>

    {% include "comments/comments.html.twig" %}
{% endblock %}

{% extends 'base.html.twig' %}
{% block assets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
{% endblock %}
{% block title %}Manage Articles{% endblock %}
{% block body %}
    <body class="" style="background: url('{{ asset('images/signup_bg.jpg') }}')">
    <div class="container">
        <div class="container" style="background-color: lightgrey; border-radius: 1%">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Active</th>
                    <th scope="col">CreatedAt </th>
                    <th scope="col">Edit </th>
                    <th scope="col">Delete </th>
                    <th scope="col">Username</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>
                        <div class="container">
                            <input class="form-check-input" type="checkbox"
                                   id="flexSwitchCheckChecked" {{ (post.active)?'checked' : ''}} data-id="{{ post.id }}" />
                            <label class="form-check-label" for="flexSwitchCheckChecked">
                            </label>
                        </div>

                    </td>
                    <td>{{  post.createdAt|date("d/m/y")  }}</td>
                    <td>
                        <a href="{{ path('admin_posts_edit_post',{"post":post.id}) }}" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a href="{{ path('admin_posts_delete_post',{"post":post.id}) }}" class="btn btn-primary">Delete</a>
                    </td>
                    <td>{{ post.user }}</td>
                    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    </body>
{% endblock %}

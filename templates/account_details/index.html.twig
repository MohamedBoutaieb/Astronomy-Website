{% endblock %}
{% block main %}
    <div class="container">
        {% for cle, value in  app.session.flashBag.get('success') %}
            <div class="alert alert-info">
                {{ value }}
            </div>
        {% endfor %}
        <h1 style="color: white">My Profile</h1>
        <br>
        <ul class="list-group">
            <li class="list-group-item disabled">
                <h4>First Name :</h4>
                {{ user.firstname }}
            </li>
            <li class="list-group-item disabled">
                <h4>Last Name :</h4>
                {{ user.lastname }}
            </li>
            <li class="list-group-item disabled">
                <h4>Email :</h4>
                {{ user.email }}
            </li>
            <li class="list-group-item disabled">
                <h4>Username :</h4>
                {{ user.username }}
            </li>
            <li class="list-group-item disabled">
                <h4>Phone Number :</h4>
                {{ user.phoneNumber }}
            </li>
        </ul>
    </div>

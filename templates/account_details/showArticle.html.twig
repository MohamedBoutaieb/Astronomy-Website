{% extends 'account_details/user.html.twig' %}

{% block title %} Article {% endblock %}

{% block assets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
{% endblock %}

{% block main %}
    <div class="container">
        {% for cle, value in  app.session.flashBag.get('success') %}
            <div class="alert alert-success">
                {{ value }}
            </div>
        {% endfor %}
{#        <figure>#}
{#            <img src="" alt="">#}
{#        </figure>#}
        <div class="card text-center">
            <div class="card-header">
                {{ article.title}}
            </div>
            <div class="card-body">
                <p class="card-text">{{ article.content }}</p>
                <a href="{{ path('edit_Post',{"article":article.id}) }}" class="btn btn-primary">Edit</a>
                <a href="{{ path('article_delete',{"article":article.id}) }}" class="btn btn-primary">Delete</a>
            </div>
            <div class="card-footer text-muted">
                {{ article.createdAt|date("d/m/y") }}
            </div>
        </div>
    </div>
{% endblock %}